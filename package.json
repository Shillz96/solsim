{
  "name": "solsim-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "install": "cd backend && npm ci",
    "build": "cd backend && npx prisma generate && npm run build",
    "start": "cd backend && npx prisma migrate deploy && node --max-old-space-size=6144 dist/index.js",
    "install-workspaces": "npm install && npm run install-types",
    "install-types": "cd packages/types && npm install",
    "backend:install": "cd backend && npm install"
  },
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "tailwindcss-language-server": "^0.0.1",
    "typescript-language-server": "^5.0.1"
  }
}
