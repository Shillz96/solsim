{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf node_modules/.prisma && npm install --omit=dev && npx prisma generate && npm run build"
  },
  "deploy": {
    "preDeployCommand": "DATABASE_URL_DIRECT=${DATABASE_URL_DIRECT:-$DATABASE_URL} npx prisma migrate deploy",
    "startCommand": "node --max-old-space-size=4096 dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
