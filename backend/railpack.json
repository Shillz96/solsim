{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "config": {
    "docker": {
      "buildkit": false,
      "platform": "linux/amd64",
      "exportTimeout": 600
    }
  },
  "steps": {
    "install": {
      "commands": [
        "npm install --production --no-audit --no-fund"
      ]
    },
    "build": {
      "commands": [
        "npx prisma generate",
        "npx tsc"
      ]
    }
  },
  "deploy": {
    "startCommand": "npx prisma migrate deploy && node dist/index.js",
    "variables": {
      "NODE_ENV": "production"
    }
  },
  "cache": {
    "enabled": false
  }
}