{
  "name": "virtualsol-backend",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:worker": "tsx src/worker.ts",
    "dev:discovery": "tsx src/workers/tokenDiscoveryWorker.ts",
    "build": "prisma generate && tsc",
    "start": "node --max-old-space-size=4096 dist/index.js",
    "start:worker": "node --max-old-space-size=1536 dist/worker.js",
    "start:discovery": "node --max-old-space-size=1536 dist/workers/tokenDiscoveryWorker.js",
    "railway:start": "prisma migrate deploy && node --max-old-space-size=4096 dist/index.js",
    "railway:worker": "prisma generate && node --max-old-space-size=1536 dist/worker.js",
    "railway:discovery": "prisma generate && node --max-old-space-size=1536 dist/workers/tokenDiscoveryWorker.js",
    "prisma:setup": "prisma generate && prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:clear": "tsx scripts/clear-database.ts",
    "db:verify": "tsx scripts/verify-database.ts",
    "db:optimize": "tsx src/scripts/create-performance-indexes.ts",
    "db:fix-enum": "tsx scripts/fix-enum-migration.ts",
    "db:seed-tokens": "tsx scripts/seed-warp-pipes-tokens.ts",
    "db:fix-uuid": "tsx scripts/fix-uuid-defaults.ts",
    "chat:cleanup": "tsx scripts/chat-cleanup.ts",
    "test": "jest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@prisma/client": "^5.18.0",
    "@sentry/node": "^10.19.0",
    "@sentry/profiling-node": "^10.19.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "decimal.js": "^10.4.3",
    "fastify": "^4.28.1",
    "helius-sdk": "^2.0.2",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "node-fetch": "^3.3.2",
    "pino-pretty": "^11.2.2",
    "redlock": "^5.0.0-beta.2",
    "resend": "^6.1.2",
    "typescript": "^5.6.3",
    "ws": "^8.18.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.9",
    "@types/pino": "^7.0.4",
    "@types/ws": "^8.18.1",
    "bs58": "^6.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.18.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.17.0",
    "tweetnacl": "^1.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "overrides": {
    "whatwg-url": "^14.0.0",
    "ajv": "^8.17.1"
  }
}
