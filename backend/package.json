{
  "name": "solsim-backend",
  "version": "1.0.0",
  "description": "SolSim Trading Simulator Backend API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "prisma generate && tsc --skipLibCheck",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "clean": "rimraf dist",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.10",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.28.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.0.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "prom-client": "^13.2.0",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.3",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.4",
    "validator": "^13.15.15",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/node-cache": "^4.1.3",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^19.0.0",
    "prettier": "^3.0.3",
    "prisma": "^5.19.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "solana",
    "trading",
    "simulator",
    "api",
    "typescript"
  ],
  "author": "SolSim Team",
  "license": "MIT"
}
