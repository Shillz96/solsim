# Environment Variables Template
# Copy this file to .env and fill in your values

# Database - PostgreSQL for production scalability
DATABASE_URL="postgresql://username:password@localhost:5432/solsim"
# For Railway: DATABASE_URL will be automatically provided

# Server Configuration
PORT=4002
PRICE_STREAM_PORT=4001
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:3001

# JWT Authentication
JWT_SECRET="your-super-secure-secret-key-min-32-characters"
JWT_EXPIRES_IN=24h

# Development Settings
DEV_AUTH_BYPASS=false
ENABLE_DB_MONITORING=true

# Redis Cache - for production performance
REDIS_URL=redis://localhost:6379
# For Railway: REDIS_URL will be automatically provided if Redis service is added